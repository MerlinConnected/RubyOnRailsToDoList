<h1 class="d-flex justify-content-center">Ajouter un rappel</h1>

<div class="mx-auto" style="width: 40%;">
    <%= form_for @todo do |f| %>
      <div class="mb-3">
          <label class="form-label">Nom :</label>
          <%= f.text_field :title, class: "form-control"%>
      </div>
      <div class="mb-3">
        <label class="form-label">Description :</label>
        <%= f.text_area :description, class:"form-control" %>
      </div>
        <%= f.submit "Créer", class:"btn btn-success"%>
        <%= link_to "Retour à ma liste",todos_path, class:"btn btn-outline-warning"%>
    <% end %>
</div>
